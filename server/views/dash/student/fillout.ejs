<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fillout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet" />
    <link rel = "stylesheet" href="/css/base.css" />
    <style>
        .container {
            display: flex;
            height: 100vh;
        }

        .item-container {
            flex: 1;
            border-right: 1px solid #ccc;
            overflow-y: auto;
            padding: 10px;
        }

        .item {
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            cursor: pointer;
        }

        .item:hover,
        .item.selected {
            background-color: #f0f0f0;
        }

        .details-container {
            flex: 1;
            padding: 10px;
            display: none;
        }

        textarea {
            width: 100%;
            height: 70%;
            resize: none;
        }
        /*Dark Mode*/
        .dark-mode .container {
    display: flex;
    height: 100vh;
}

.dark-mode .item-container {
    flex: 1;
    border-right: 1px solid #444;
    overflow-y: auto;
    padding: 10px;
    background-color: #1e1e1e;
    color: #ddd;
}

.dark-mode .item {
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #555;
    border-radius: 5px;
    cursor: pointer;
    background-color: #2a2a2a;
    color: #ddd;
}

.dark-mode .item:hover,
.dark-mode .item.selected {
    background-color: #333;
}

.dark-mode .details-container {
    flex: 1;
    padding: 10px;
    display: none;
    background-color: #1e1e1e;
    color: #ddd;
}

.dark-mode textarea {
    width: 100%;
    height: 70%;
    resize: none;
    background-color: #2b2b2b;
    color: #ddd;
    border: 1px solid #555;
}
    </style>
</head>

<body>
    <%- include("../../partials/header") %>
    <div class="container">
        <div class="item-container">
            <% requests.forEach(request => { %>
            <div class="item" data-request='<%= JSON.stringify(request) %>' data-id="<%= request.requestId %>">
                <strong>
                <%= request.testName %>
                </strong>
            </div>
            <% }); %>
        </div>
        <div class="details-container">
            <textarea id="questionString" readonly></textarea>
            <div class="mt-3">
            <input type="text" id="linkInput" class="form-control" placeholder="Paste your link here">
            <button id="submitButton" class="btn btn-primary mt-2">Submit</button>
            </div>
        </div>
        <script>
            const submitButton = document.getElementById('submitButton');
            const linkInput = document.getElementById('linkInput');

            submitButton.addEventListener('click', () => {
            const selectedItem = document.querySelector('.item.selected');
            if (!selectedItem) {
                alert('Please select a request first.');
                return;
            }

            const requestId = selectedItem.getAttribute('data-id');
            const link = linkInput.value.trim();

            if (!link) {
                alert('Please paste a link before submitting.');
                return;
            }

            fetch('/dash/submitLink', {
                method: 'POST',
                headers: {
                'Content-Type': 'application/json'
                },
                body: JSON.stringify({ requestId, link })
            })
            .then(response => response.json())
            .then(res => {
                if (!res.err) {
                alert('Link submitted successfully!');
                linkInput.value = ''; // Clear the input field
                } else {
                alert('Error submitting the link.');
                }
            })
            .catch(error => console.error('Fetch error:', error));
            });
        </script>
        <div class="details-container">
            <textarea id="questionString" readonly></textarea>
        </div>
    </div>


    <script>
        const items = document.querySelectorAll('.item');
        const detailsContainer = document.querySelector('.details-container');
        const textarea = detailsContainer.querySelector('textarea');

        items.forEach(item => {
            item.addEventListener('click', () => {
                // Remove 'selected' class from all items
                items.forEach(i => i.classList.remove('selected'));
                // Add 'selected' class to the clicked item
                item.classList.add('selected');

                // Show details container
                detailsContainer.style.display = 'block';

                // Render the data in the textarea
                const requestData = JSON.parse(item.getAttribute('data-request'));
                // textarea.value = JSON.stringify(requestData, null, 2);

                // Grab the question string from retakeRequest
                fetch(`/dash/getQuestionString?requestId=${requestData.requestId}`)
                    .then(response => response.json())
                    .then(res => {
                        if (!res.err) {
                            textarea.value = "Copy and paste the work and submit a link.\n" + res.questionString
                        } else {
                            textarea.value = 'Error getting the data';
                        }
                    })
                    .catch(error => console.error('Fetch error:', error));

            });
        });
    </script>
    <script src="/js/darkmode.js"></script>
    
</body>

</html>